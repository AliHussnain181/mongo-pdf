<!-- views/pdfList.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>PDF List</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>List of PDF Files</h1>
  <ul>
    <% pdfFiles.forEach((file) => { %>
      <li><a href="/pdf/<%= file.filename %>"><%= file.filename %></a></li>
    <% }); %>
  </ul>
</body>
</html>
